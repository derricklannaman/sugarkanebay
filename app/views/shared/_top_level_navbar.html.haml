%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %a.navbar-brand{:href => root_path}
        SKB
        / %img{:alt => "Brand", :src => "..."}/
    .pull-right

      - if user_signed_in?
        %span= "Hello, #{current_user.firstname}"
        = link_to "Sign Out", destroy_user_session_path, method: :delete
        %div
          %span=link_to "Cart", cart_path(current_user.cart) if current_user.cart.present?
          %span.badge= cart_quantity
          \|
          %span= link_to "Account", account_path
      - else
        = link_to "Sign Up", new_user_registration_path(redirect_to: request.path)
        \|
        = link_to "Log In", new_user_session_path(redirect_to: request.path)
      %span=link_to "Shop", shop_path
      %span=link_to "How it works", how_path
      %span=link_to "About", about_path


