%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %a.navbar-brand{:href => root_path}
        SKB
        / %img{:alt => "Brand", :src => "..."}/
    .pull-right
      %span=link_to "Shop", shop_path
      %span=link_to "How it works", how_path
      %span=link_to "About", about_path

      - if user_signed_in?
        = link_to "Sign Out", destroy_user_session_path, method: :delete
        %div= "Hello, #{current_user.firstname}"
        %span=link_to "Cart", cart_path(current_user.cart) if current_user.cart.present?
        %span= cart_quantity

      - else
        = link_to "Sign Up", new_user_registration_path
        \|
        = link_to "Log In", new_user_session_path


