- if params[:locals].present? && params[:action] == "account"
  %h2
    = "Thanks, you paid #{number_to_currency(paid_amount( params[:locals][:paid]) )}"
.row
  .col-sm-4
    %h3
      Current Order
    %hr/

    %ul
    - if current_user.cart
      = render partial: 'shared/ordered_items', locals: {orders: @orders}

  .col-sm-5
    / TODO: fix this ugly shit
    %h3
      Orders Pending Shipping -
      %span
        %p You will receive an email when the order is shipped
    / %p
    /   A text confirmation will be sent when your order is shipped.
    %hr/
    - if current_user.cart
      - @prev_orders.each do |order|
        .account-order-date
          = local_time(order.first)
        %ul.prev-order-list
          - order[1].each do |o|
            %li
              = o.order_items
              = o.quantity
              = number_to_currency o.total
